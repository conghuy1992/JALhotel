<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/prev_bg">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="14dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/imageView2"
                android:src="@drawable/prev_menu_user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/prev_text_size_tb"
                android:ellipsize="end" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_gravity="top"
            android:focusableInTouchMode="false"
            android:focusable="false">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/imageView3"
                android:src="@drawable/prev_menu_logout"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logout"
                android:layout_marginLeft="5dp"
                android:textSize="@dimen/prev_text_size_tb"
                android:textColor="@drawable/prev_logout_txt_color"
                android:clickable="true"
                android:enabled="true"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:text="@string/prev_btn_logout"
                android:textIsSelectable="false" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <ImageView
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:id="@+id/start_preview"
                android:src="@drawable/prev_start_selector"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/prev_text_round"
                android:padding="7dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top"
                    android:gravity="top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:textSize="@dimen/prev_small_text_size_tb"
                        android:textColor="#888a8b"
                        android:text="@string/prev_notify_title_mark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:layout_gravity="bottom"
                        android:textColor="#888a8b"
                        android:textSize="@dimen/prev_small_text_size_tb"
                        android:text="@string/prev_notify_title" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top"
                    android:gravity="top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:textSize="@dimen/prev_small_text_size_tb"
                        android:textColor="#888a8b"
                        android:text="@string/prev_notify_text_mark" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4"
                        android:layout_gravity="bottom"
                        android:textColor="#888a8b"
                        android:textSize="@dimen/prev_small_text_size_tb"
                        android:text="@string/prev_notify_text1" />

                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="top"
                    android:gravity="top">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView5"
                        android:text="@string/prev_notify_text_mark"
                        android:textSize="@dimen/prev_small_text_size_tb"
                        android:textColor="#888a8b" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:layout_gravity="bottom"
                        android:textColor="#888a8b"
                        android:textSize="@dimen/prev_small_text_size_tb"
                        android:text="@string/prev_notify_text2" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
