<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusableInTouchMode="true"
    android:padding="10dp">

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/button_menu"
        android:src="@drawable/mapicon_btn_menu"
        android:scaleType="fitXY"
        android:baselineAlignBottom="false"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/button_list"
        android:src="@drawable/mapicon_btn_storelist"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button_menu" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/button_mylocation"
        android:src="@drawable/mapicon_btn_location"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/button_list"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginLeft="55dp"
        android:id="@+id/relativeLayout"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:src="@drawable/mapicon_search_box"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/mapicon_search"
            android:layout_marginLeft="15dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/search_input"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:inputType="text"
            android:enabled="true"
            android:textAlignment="center"
            android:textColor="#585858"
            android:selectAllOnFocus="false"
            android:textColorHint="#aaaaaa"
            android:layout_marginLeft="45dp"
            android:background="@android:color/transparent"
            android:layout_marginRight="10dp" />

    </RelativeLayout>

</RelativeLayout>
