<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/padding_5"
    android:paddingLeft="@dimen/padding_10"
    android:paddingRight="@dimen/padding_10"
    android:paddingTop="@dimen/padding_5"
    android:background="#000">

    <ImageView
        android:id="@+id/imagenotileft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="@dimen/padding_10"
        android:src="@drawable/round_red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/imagenotileft"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textColor="#fff"
            android:singleLine="true"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/barista7/Desktop/baricata_sekisui_android/BaristaPushNewSDK/src/main/res/layout/notification_custom.xml -->