<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/bariusta_button_width"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bariusta_button"
        android:layout_width="@dimen/bariusta_button"
        android:layout_height="@dimen/bariusta_button"
        android:background="@drawable/btn_barista_selector"
        android:textColor="#000"
        android:textSize="@dimen/text_size_16"/>

    <RelativeLayout
        android:id="@+id/content_badge_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/badge_bg"
        android:paddingBottom="@dimen/padding_3"
        android:paddingLeft="@dimen/padding_7"
        android:paddingRight="@dimen/padding_7"
        android:layout_toRightOf="@+id/bariusta_button"
        android:paddingTop="@dimen/padding_3">

        <TextView
            android:id="@+id/tv_badge_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#fff"
            android:textSize="@dimen/text_size_14" />
    </RelativeLayout>

</RelativeLayout>
